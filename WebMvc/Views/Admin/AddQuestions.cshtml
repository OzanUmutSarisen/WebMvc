@model WebMvc.Models.Domain.Questions

<form method="post" action="AddQuestions">
    <input type="text" class="form-control" asp-for="Id" value="@Model.Id" hidden>
    <div class="mb-3">
        <label for="" class="form-label">Question</label>
        <input type="text" class="form-control" asp-for="quest" value="@Model.quest">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Answer</label>
        <input type="text" class="form-control" asp-for="answer"value="@Model.answer">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Question Time</label>
        <input type="text" class="form-control" asp-for="questionTime" value="@Model.questionTime">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Departman seçiniz</label>
        @Html.DropDownListFor(m=>m.FK_videoId,(List<SelectListItem>)ViewBag.ddl,new { @class="form-control"})
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
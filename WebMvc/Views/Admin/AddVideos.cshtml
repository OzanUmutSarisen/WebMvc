@model WebMvc.Models.ViewModels.VM_DowloadVideo

<form method="post" action="AddVideos"  enctype="multipart/form-data">
    <input type="text" class="form-control" asp-for="Id" value="@Model.Id" hidden>
    <div class="mb-3">
        <label for="" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="name" value="@Model.name">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Videonuzu ekleyiniz</label>
        <input type="file" class="form-control" asp-for="video" value="@Model.video">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Start Time</label>
        <input type="text" class="form-control" asp-for="startTime" value="@Model.startTime">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Departman seçiniz</label>
        @Html.DropDownListFor(m=>m.FK_coursesId,(List<SelectListItem>)ViewBag.ddl,new { @class="form-control"})
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
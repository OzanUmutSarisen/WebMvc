@{
}
@model WebMvc.Models.Domain.Courses
<form method="post" action="AddCourses">
    <input type="text" class="form-control" asp-for="Id" value="@Model.Id" hidden>
    <div class="mb-3">
        <label for="" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="name" value="@Model.name">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Teacher seçiniz</label>
        @Html.DropDownListFor(m=>m.FK_teacherId,(List<SelectListItem>)ViewBag.ddl,new { @class="form-control"})
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Departman seçiniz</label>
        @Html.DropDownListFor(m=>m.FK_departmentId,(List<SelectListItem>)ViewBag.ddl2,new { @class="form-control"})
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
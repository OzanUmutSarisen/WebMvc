@model WebMvc.Models.TeacherViewModels.TVM_Videos

<form method="post" action="TeacherAddVideos" enctype="multipart/form-data">

    <input type="text" class="form-control" asp-for="Id" value="@ViewBag.VideoId" hidden>
    <input type="text" class="form-control" asp-for="FK_coursesId" value="@ViewBag.CourseId" hidden>
    <div class="mb-3">
        <label for="" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="name">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Videonuzu ekleyiniz</label>
        <input type="file" class="form-control" asp-for="video">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Start Time</label>
        <input type="text" class="form-control" asp-for="startTime">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
@{
}
@model List<WebMvc.Models.Domain.Courses>

<!DOCTYPE html>
<html>
<head>
    <title>Ders Listesi</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1>Ders Listesi</h1>
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Ders Adı</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.name</td>
                        <td>
                            <a class="btn btn-warning btn-sm" href="/Teacher/CourseInfo?id=@item.Id">Ders Bilgileri</a>
                            <a class="btn btn-warning btn-sm" href="/Teacher/TeacherAddVideos?id=@item.Id">Yeni Video Ekle</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>